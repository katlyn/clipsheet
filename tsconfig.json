{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "noErrorTruncation": true,
    "declaration": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "rootDirs": ["./src"],
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
